@using Microsoft.AspNetCore.Identity
@using AgreementManagement.Web.Areas.Identity.Data

@inject SignInManager<AgreementManagementWebUser> SignInManager
@inject UserManager<AgreementManagementWebUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="products" asp-controller="Agreement" asp-action="Index">Products</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" @*asp-area="Identity" asp-page="/Account/Manage/Index"*@ title="Manage">Hello <span style="font-weight:bold">@UserManager.GetUserName(User)</span></a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
